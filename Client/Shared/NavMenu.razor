<div>
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> <span class="displayText">Home</span>
            </NavLink>
        </li>
    </ul>

    <AuthorizeView>
        <Authorized>

            <div class="separator"></div>
            <div class="scroller">
                <ul class="nav flex-column">

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Company">
                            <span class="syncfusion-blazor-icons syncfusion-blazor-icon-scheduler" aria-hidden="true"></span><span class="displayText" style="margin-left:5px">Companies</span>
                        </NavLink>
                    </li>

                </ul>
                @if (IsSidebarOpen)
                {
                    <SfTreeView CssClass="tempx" TValue="TreeData">
                        <TreeViewFieldsSettings Id="Id" NavigateUrl="navigateUrl" Text="Name" ParentID="Pid" HasChildren="HasChild" Expanded="Expanded" DataSource="@LocalData"></TreeViewFieldsSettings>
                     <TreeViewTemplates TValue="TreeData">
                                <NodeTemplate  Context="cont">
                                    <div class="mx-auto"><span class="syncfusion-blazor-icons syncfusion-blazor-icon-pdfviewer tempx" aria-hidden="true"></span><span class="displayText" style="color:white;margin-left: 5px">@cont.Name</span>
                                    </div> </NodeTemplate>
                            </TreeViewTemplates>
                </SfTreeView>
            }
            </div>
        </Authorized>
    </AuthorizeView>
</div>
<style>
    .white-text {
        color: white;
    }
    .tempx:hover {
        background: transparent;
    }
    .e-treeview .e-list-item.e-hover>.e-fullrow
    {
        color: white !important;
        background-color: transparent !important;
    }
</style>
@code
{
    [Parameter]
    public bool IsSidebarOpen{ get; set; }

    List<TreeData> LocalData = new(){new TreeData
    {
        Id = "1",
        Name = "Report",
        HasChild = true,
        Expanded = false,
        navigateUrl="/",
    },new TreeData
    {
        Id = "2",
        Pid = "1",
        Name = "Sales Invoice",
        navigateUrl="/Reports",
    },new TreeData
    {
        Id = "3",
        Pid = "1",
        Name = "Purchase Invoice",
        navigateUrl="/Reports?Type=Purchase",
    }
        ,new TreeData
        {
            Id = "4",
            Pid = "1",
            Name = "Return Invoice",
            navigateUrl="/Reports?Type=Return",
        }
        ,new TreeData
        {
            Id = "5",
            Pid = "1",
            Name = "Estimate",
            navigateUrl="/Reports?Type=Estimate",
        }
        ,new TreeData
        {
            Id = "6",
            Pid = "1",
            Name = "Purchase Return Invoice",
            navigateUrl="/Reports?Type=PurchaseReturn",
        }
        ,new TreeData
        {
            Id = "7",
            Pid = "1",
            Name = "Cash Invoice",
            navigateUrl="/Reports?Type=Cash",
        }
    };
    class TreeData
    {
        public string Id { get; set; }
        public string Pid { get; set; }
        public string Name { get; set; }
        public bool HasChild { get; set; }
        public bool Expanded { get; set; }
        public string navigateUrl { get; set; }
    }
}
<style>
    .scroller {
        height: calc(100vh - 160px) !important;
        overflow-y: auto;
        width: 287px;
    }

    .scroller::-webkit-scrollbar, scrollbar-thumb
        .scroller::-webkit-scrollbar-thumb {
        width: 8px;
        height: 110px;
        border-radius: 4px;
        position: center;
    }

    .scroller::-webkit-scrollbar-thumb {
        box-shadow: inset 0 0 0 10px #313C75;
