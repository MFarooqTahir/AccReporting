    }

    .scroller::-webkit-scrollbar-track {
        width: 28px;
    }

    .separator {
        border: 1px solid #FFFFFF;
        opacity: 0.14;
        width: 247px;
        margin: 1rem;
        margin-top: 0px;
    }
</style>
